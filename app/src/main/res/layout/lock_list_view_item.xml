<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/lock_list_view_item_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="100"
        android:background="@color/default_list_view_item_background_color"
        android:padding="12dp">

        <LinearLayout
            android:id="@+id/list_view_lock_name_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/list_view_lock_icon"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/list_view_lock_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Fechadura Principal"
                android:textColor="@color/gray_200"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/list_view_lock_name_layout"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_baseline_person_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@string/lock_list_lock_owner_description"
                android:textColor="@color/blue_500"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/list_view_lock_created_by_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Wilian Hendler Borges"
                android:textColor="@color/gray_200"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lock_list_delete_button"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:background="#A83939"
        android:gravity="center">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_delete_24" />

    </LinearLayout>

</LinearLayout>


